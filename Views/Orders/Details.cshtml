@model OnlineBookstore.Models.Order

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Order</h4>
    <hr />
	<dl class="dl-horizontal">
		<dt>
			@Html.DisplayNameFor(model => model.OrderDate)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.OrderDate)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.OrderValue)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.OrderValue)
		</dd>

		<dt>
			First Name
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Customer.Fname)
		</dd>

		<dt>
			Last Name
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Customer.Lname)
		</dd>

		<br />
		<dt>
			@Html.DisplayNameFor(model => model.OrderItems)
		</dt>
		<dd>
			<br />
			<table class="table">
				<tr>
					<th>Title</th>
					<th>Item Price</th>
				</tr>
				@foreach (var item in Model.OrderItems)
				{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Book.Title)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.ItemPrice)
				</td>
				
			</tr>
				}
			</table>
		</dd>

	</dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.OrderID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
